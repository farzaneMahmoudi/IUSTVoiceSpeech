<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:padding="8dp">

    <TextView
        android:id="@+id/text_voice_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="16sp"
        android:padding="8dp"
        android:layout_marginLeft="22dp"
        android:textColor="#D7111111"
        app:layout_constraintBottom_toBottomOf="@id/play_pause_button"
        app:layout_constraintLeft_toRightOf="@id/play_pause_button"
        app:layout_constraintTop_toTopOf="@id/play_pause_button"
        tools:text="voice01" />


    <TextView
        android:id="@+id/text_voice_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="12sp"
        android:padding="8dp"
        android:textColor="#BE111111"
        android:layout_marginLeft="40dp"
        app:layout_constraintBottom_toBottomOf="@id/play_pause_button"
        app:layout_constraintLeft_toRightOf="@id/text_voice_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/play_pause_button"
        android:layout_marginRight="2dp"
        tools:text="voice01" />

    <ImageView
        android:id="@+id/play_pause_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_music_note"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/play_pause_button"
        android:background="@color/lineBackground"
        />

</androidx.constraintlayout.widget.ConstraintLayout>